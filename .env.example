# Configuración común
TZ=America/El_Salvador
PUID=1000
PGID=1000

# Configuración de red
DEFAULT_NETWORK=raspberry_network
MULTIMEDIA_NETWORK=multimedia_network

# Configuración de dominios
DOMAIN=raspberrypi.local
TRAEFIK_EMAIL=admin@raspberrypi.local

# Configuración de seguridad
ALLOW_LOCAL_NETWORK=true
ALLOWED_IPS=127.0.0.1,192.168.*.* # IPs permitidas para acceso web

# Rutas de almacenamiento comunes
MOVIES_PATH=/movies
TV_SHOWS_PATH=/tv
MUSIC_PATH=/music
DOWNLOADS_PATH=/downloads

# Configuración de transcodificación
TRANSCODE_DIR=/transcode
TRANSCODE_TEMP_DIR=/transcode/temp

# Variables específicas de servicios multimedia
TRANSMISSION_USER=admin
TRANSMISSION_PASS=admin # Cambiar en producción

# Variables específicas de servicios
# [Agregar variables específicas de servicios aquí]

